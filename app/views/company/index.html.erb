<h2 align="center"> My Job Portal</h2>
<br>
<br>
<br>
<table style="width:50%"
       border="1px solid black"
       border-width="thin"
       align="center"
       text-align="left"
       id="tb1">
  <tr>
    <th>Company</th>
    <th>Status</th>
  </tr>
  <% for company in @company %>
      <tr>
        <td align="center">
          <%= company.name%>
        </td>
        <% if company.disable_flag %>
         <td align="center">
          <button type="button" disabled>Applied</button>
         </td>
        <%else%>
         <td align="center">
         <%= form_tag :action => 'trans_create', :method => :post do |f| %>
          <div>
          <%= hidden_field_tag :company_id, company.id%></div>
          <%= hidden_field_tag :applicant_id, @Applicant_id%></div>
          <div><%= submit_tag( "Apply" )%></div>
        <% end %>
        </td>
        <% end %>    
      </tr>
  <% end %>
</table>